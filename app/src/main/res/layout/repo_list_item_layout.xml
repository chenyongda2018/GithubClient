<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repo_list_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/repo_list_item_user_avatar_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            tools:srcCompat="@tools:sample/avatars"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/repo_list_item_user_avatar_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repo_list_item_repo_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Crosswords"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/repo_list_item_repo_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Crosswords"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/repo_list_item_repo_star_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_star_gray_15dp"
                    android:text="20"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/repo_list_item_repo_fork_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@drawable/ic_fork_gray_15dp"
                    android:text="20"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/repo_list_item_owner_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@drawable/ic_person_gray_15dp"
                    android:text="chenyongda2018"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
